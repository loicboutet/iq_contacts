<% cache(cache_key_with_format(@contact, "big")) do %>
  <div class="col-lg-6 col-md-6 col-sm-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <a href="<%= contact_url(@contact) %>">
          <div class="col-sm-4">
            <div class="text-center">
              <img alt="image" class="img-circle m-t-xs img-responsive" src="<%= @contact.avatar.url %>">
              <div class="m-t-xs font-bold"><%= @contact.occupation %></div>
            </div>
          </div>
          <div class="col-sm-8">
            <h3><strong><%= "#{@contact.first_name} #{@contact.last_name}"%> </strong></h3>
            <p>
              <% if @contact.company.present? %>
                <i class="fa fa-suitcase"></i> <%= @contact.company %>
              <% end %>
            </p>
            <address>
              <% if @contact.address_street.present? || @contact.address_city.present? || @contact.address_country.present? %>
                <i class="fa fa-home"></i> <%= @contact.address_street %> <% if @contact.address_street.present? %> <% end %>
                <%= @contact.address_city %> <%= @contact.address_country %><br>
              <% end %>
              <% if @contact.email.present? %>
                <i class="fa fa-envelope-o"></i> <%= @contact.email %><br/>
              <% end %>
              <% if @contact.mobile_phone.present? %>
                <i class="fa fa-mobile-phone"></i> <%= @contact.mobile_phone %><br/>
              <% end %>
              <% if @contact.landline_phone.present? %>
                <i class="fa fa-phone"></i> <%= @contact.landline_phone %>
              <% end %>
            </address>
            <% if @contact.tag_list.present? %>
              <p>Tags : <%= @contact.tag_list.join(",") %>
            <% end %>
            <p>
          </div>
          <div class="clearfix"></div>
        </a>
      </div>
      <div class="panel-footer">
        <%= link_to(edit_contact_url(@contact), class: "btn btn-sm btn-primary") do %>
          <i class="fa fa-dot-circle-o"></i> <%= t("contacts.edit") %>
        <% end %>

        <%= link_to(contact_url(@contact, format: :pdf), class: "btn btn-sm btn-info") do %>
          <i class="fa fa-file-text-o"></i> <%= t("contacts.export") %>
        <% end %>

        <%= link_to(contacts_url, class: "btn btn-sm btn-default") do %>
          <i class="fa fa-ban"></i> <%= t("contacts.cancel") %>
        <% end %>

        <%= link_to(contact_url(@contact), method: :delete, class: "btn btn-sm btn-danger pull-right") do %>
          <i class="fa fa-times"></i> <%= t("contacts.delete") %>
        <% end %>


      </div>
    </div><!--/.info-box-->
  </div><!--/.col-->
<% end %>
