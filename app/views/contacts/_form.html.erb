<%= form_for(@contact, multipart:true, html: {class: "form-horizontal"}) do |f| %>
  <div class="panel-body">
    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :avatar %></label>
      <div class="col-md-9">
        <div class="fileinput <%= @contact.avatar.present? ? 'fileinput-exists' : 'fileinput-new' %>" data-provides="fileinput">
          <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
          </div>
          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
            <% if @contact.avatar.present? %>
              <img src="<%= @contact.avatar.url %>"/>
            <% end %>
          </div>
          <div>
            <span class="btn btn-default btn-file"><span class="fileinput-new"><%= t("fileupload.select") %></span><span class="fileinput-exists"><%= t("fileupload.change") %></span><%= f.file_field "avatar" %></span>
            <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput"><%= t("fileupload.remove") %></a>
          </div>
        </div>
      </div>
    </div>


    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :first_name %><span>*</span></label>
      <div class="col-md-9">
        <%= f.text_field :first_name, :class => "form-control", :required => true, :placeholder => t("contacts.first_name") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :last_name %><span>*</span></label>
      <div class="col-md-9">
        <%= f.text_field :last_name, :class => "form-control", :required => true, :placeholder => t("contacts.last_name") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :company %></label>
      <div class="col-md-9">
        <%= f.text_field :company, :class => "form-control", :placeholder => t("contacts.company") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :occupation %></label>
      <div class="col-md-9">
        <%= f.text_field :occupation, :class => "form-control", :placeholder => t("contacts.occupation") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :email %></label>
      <div class="col-md-9">
        <%= f.text_field :email, :class => "form-control", :placeholder => t("contacts.email") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :mobile_phone %></label>
      <div class="col-md-9">
        <%= f.text_field :mobile_phone, :class => "form-control", :placeholder => t("contacts.mobile_phone") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :landline_phone %></label>
      <div class="col-md-9">
        <%= f.text_field :landline_phone, :class => "form-control", :placeholder => t("contacts.landline_phone") %>
      </div>
    </div>



    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :address_street %></label>
      <div class="col-md-9">
        <%= f.text_field :address_street, :class => "form-control", :placeholder => t("contacts.address_street") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :address_city %></label>
      <div class="col-md-9">
        <%= f.text_field :address_city, :class => "form-control", :placeholder => t("contacts.address_city") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :address_country %></label>
      <div class="col-md-9">
        <%= f.text_field :address_country, :class => "form-control", :placeholder => t("contacts.address_country") %>
      </div>
    </div>



    <div class="form-group">
      <label class="col-md-3 control-label" for="text-input"><%= f.label :tag_list %></label>
      <div class="col-md-9">
        <%= f.hidden_field :tag_list, :class => "form-control", :placeholder => t("contacts.tag_list") %>
      </div>
    </div>



  </div>
  <div class="panel-footer">
    <%= button_tag(type: 'submit', class: "btn btn-sm btn-primary") do %>
      <i class="fa fa-dot-circle-o"></i> <%= t("contacts.submit") %>
    <% end %>

    <%= link_to(contacts_url, class: "btn btn-sm btn-default") do %>
      <i class="fa fa-ban"></i> <%= t("contacts.cancel") %>
    <% end %>

  </div>
<% end %>

<% content_for :javascript do %>
  <script>
    $(function(){
      $('#contact_tag_list').select2({
        // specify tags
        tags: ["<%= t('tags.work') %>", "<%= t('tags.friends') %>", "<%= t('tags.familly') %>"],
        tokenSeparators: [","]
      });
    });
  </script>
<% end %>
